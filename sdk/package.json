{
  "name": "@micropress/plugin-sdk",
  "version": "0.1.8",
  "description": "SDK for building MicroPress plugins",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./editor": {
      "types": "./dist/editor.d.ts",
      "default": "./dist/editor.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch"
  },
  "keywords": ["micropress", "plugin", "cms"],
  "author": "Jan Thewes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JWThewes/MicroPress-Plugin-SDK.git",
    "directory": "sdk"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@tiptap/core": "^3.13.0",
    "@aws-sdk/client-ssm": "^3.0.0"
  },
  "peerDependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/client-ssm": "^3.0.0",
    "@aws-sdk/util-dynamodb": "^3.0.0"
  }
}
